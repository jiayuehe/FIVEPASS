<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/exercise_box"
            android:paddingTop="20dp"
            android:paddingBottom="20dp">

            <ImageView
                android:id="@+id/walking"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:srcCompat="@drawable/walking"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/walking"
                android:paddingRight="20dp"
                android:paddingLeft="20dp">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/textview"
                    android:textSize="@dimen/titleMedium"
                    android:fontFamily="casual"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/startingDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/name"
                    android:text="08/12/18 17:00 - 17:30"
                    android:textColor="@color/white"/>

                <Button
                    android:id="@+id/edit_button"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:text=""
                    android:layout_toLeftOf="@id/check_button"
                    android:layout_centerVertical="true"
                    android:background="@drawable/edit_exercise" />
                <Button
                    android:id="@+id/check_button"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:text=""
                    android:layout_centerVertical="true"
                    android:background="@drawable/check_exercise"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="10dp"/>

            </RelativeLayout>

        </RelativeLayout>


    </RelativeLayout>

</RelativeLayout>